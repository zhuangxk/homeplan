/* components/keyboard/keyboard.wxss */

.j-keyboard-box{
  /* background-color: #fff; */
  display: grid;
  grid-template-columns: repeat(3, 180rpx) 210rpx;
  grid-template-rows:  100rpx 100rpx 100rpx 100rpx 100rpx;
  grid-auto-rows: 100rpx;
  justify-items: center;
  align-items: center;
  gap: 4rpx;
  /* padding: 20rpx; */
  /* background-color: aqua; */

}

.j-keyboard-box > view{
  /* border: 1px solid #565656; */
  background-color: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  /* width: 100rpx; */
  /* height: 100rpx; */
  width: 100%;
  height: 100%;
  /* border-radius: 50%; */
}

.j-keyboard-box > .del {
  grid-row: 2 / 3;
  grid-column: 4 / 5;
}

.j-keyboard-box > .ok {
  grid-row: 3 / 6;
  grid-column: 4 / 5;
  line-height: 300rpx;
  background-color: var(--cyan);
}

.j-keyboard-box > .zero{
  grid-row: 5 / 6;
  grid-column: 1 / 3;
}

.j-keyboard-box > .toolbar {
  grid-row: 1 / 2;
  grid-column: 1 / 5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  /* font-weight: bold; */
  font-size: 20px;
}

.j-keyboard-box > .toolbar > .remark {
  width: 75%;
  text-align: right;
  position: relative;
  font-size: 14px;
}

.j-keyboard-box > .toolbar > .remark > view{
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  border: 1px solid var(--cyan);
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.j-keyboard-box > .toolbar > .remark > input {
  position: absolute;
  top:0;
  right: 0;
  left: 0;
  height: 100%;
  padding: 5px 21px;
  caret-color: var(--cyan);
}