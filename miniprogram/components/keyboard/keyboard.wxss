/* components/keyboard/keyboard.wxss */

.j-keyboard-box{
  display: grid;
  grid-template-columns: repeat(3, 180rpx) 210rpx;
  grid-template-rows:  100rpx 100rpx 100rpx 100rpx 100rpx;
  grid-auto-rows: 100rpx;
  justify-items: center;
  align-items: center;
  gap: 4rpx;
  background-color: #eee;
}

.j-keyboard-box > view{
  background-color: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  width: 100%;
  height: 100%;
}
.j-keyboard-box > view:active{
  background-color: #ddd;
}
.j-keyboard-box > .toolbar:active{
  background-color: #fff;
}

.j-keyboard-box > .del {
  grid-row: 5 / 6;
  grid-column: 3 / 4;
}

.j-keyboard-box > .ok {
  grid-row: 4 / 6;
  grid-column: 4 / 5;
  line-height: 200rpx;
  background-color: var(--cyan);
}

.j-keyboard-box > .zero{
  grid-row: 5 / 6;
  grid-column: 2 / 3;
}

.j-keyboard-box > .toolbar {
  grid-row: 1 / 2;
  grid-column: 1 / 5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  /* font-weight: bold; */
  font-size: 20px;
}

.j-keyboard-box > .toolbar > .btn {
  margin-left: 30rpx;
}
.j-keyboard-box > .toolbar > .remark {
  width: 75%;
  text-align: right;
  position: relative;
  font-size: 14px;
  padding: 0 20rpx;
}

.j-keyboard-box > .toolbar > .remark > view{
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  border: 1px solid var(--cyan);
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.j-keyboard-box > .toolbar > .remark > input {
  position: absolute;
  top:0;
  right: 0;
  left: 0;
  height: 100%;
  padding: 5px 21px;
  caret-color: var(--cyan);
}
@keyframes blink {
  0%{
    background-color: white;
  }
  50% {
    background-color: var(--cyan);
  }
  100% {
    background-color: white;
  }
}

.j-keyboard-field {
  font-size: 30px;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #ddd;
  margin: 10rpx 30rpx;
  font-weight: bold;
}
.j-keyboard-field > text:first-child {
  font-size: 20px;
}

.j-keyboard-field > text:last-child:after{  
    content:'';
    display: inline-block;
    margin-left: 3px;
    width:1px;
    height:55rpx;
    animation: blink 1s infinite steps(1, start);
}

.j-icon-list{
  padding: 0 10rpx;
  height: 270rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.j-icon-item{
  flex: 1 1 auto;
  box-sizing: content-box;
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  color: #777;
  /* background-color: aquamarine; */
  /* padding: 10rpx;  */
  /* margin: 10rpx;  */
}

.j-icon-list .active > .j-icon-item-icon {
  background-color: var(--cyan);
  color: #fff;
}

.j-icon-item > .j-icon-item-icon{
  display: inline-block;
  font-size: 25px;
  background-color: #eee;
  /* box-shadow: 0 0 0 10rpx #333; */
  border-radius: 50%;
  padding: 10rpx;
}

.j-icon-item > .j-icon-item-text{
  display: block;
  font-size: 10px;
  /* line-height: 2em; */
}

.account-title{
  text-align: center;
  font-weight: bold;
  line-height: 100rpx;
}


::-webkit-scrollbar {
  display: block;
  width: 2px;
  height: 3px;
  color:#fff;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 10px rgba(222, 222, 222, 0.3);
  box-shadow: inset 0 0 6px rgba(222, 222, 222, .3);
  border-radius: 2px;
  background-color:#fff;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 2px;
  background-color: #eee;
}