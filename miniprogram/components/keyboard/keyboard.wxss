/* components/keyboard/keyboard.wxss */

.j-keyboard-box{
  /* background-color: #fff; */
  display: grid;
  grid-template-columns: repeat(auto-fill, 170rpx);
  grid-template-rows:  repeat(auto-fill, 100rpx);
  grid-auto-rows: 100rpx;
  justify-items: center;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;

}

.j-keyboard-box > view{
  /* border: 1px solid #565656; */
  background-color: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  /* width: 100rpx; */
  /* height: 100rpx; */
  width: 100%;
  height: 100%;
  /* border-radius: 50%; */
}

.j-keyboard-box > .del {
  grid-row: 2 / 3;
  grid-column: 4 / 5;
}

.j-keyboard-box > .ok {
  grid-row: 3 / 6;
  grid-column: 4 / 5;
  line-height: 300rpx;
  background-color: var(--cyan);
}

.j-keyboard-box > .zero{
  grid-row: 5 / 6;
  grid-column: 1 / 3;
}

.j-keyboard-box > .field {
  grid-row: 1 / 2;
  grid-column: 1 / 5;
  display: flex;
  text-align: left;
  align-items: center;
  padding: 0 20rpx;
  font-weight: bold;
}