.icon-item{
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50% 50%;
  height: 100%;
  width: 100%;
  font-size: 20rpx;
  --ShadowSize: 0 2rpx 6rpx;
}

.icon-bth{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50% 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  font-weight: bold;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.7);
}